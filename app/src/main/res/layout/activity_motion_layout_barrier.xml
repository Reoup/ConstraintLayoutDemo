<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.motion.widget.MotionLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    app:layoutDescription="@xml/motion_scene_barrier"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageButton
        android:id="@+id/backButton"
        android:layout_width="56dp"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:padding="16dp"
        android:src="@drawable/ic_bookmark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>


    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/projectBeginBarrier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="end"
        app:constraint_referenced_ids="backButton" />


    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/projectViewContainer"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/projectEndBarrier"
        app:layout_constraintStart_toEndOf="@id/projectBeginBarrier"
        app:layout_constraintTop_toTopOf="parent">
        <View
            android:id="@+id/projectView"
            android:background="@color/button_blue"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </FrameLayout>


    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/projectEndBarrier"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:barrierDirection="start"
        app:constraint_referenced_ids="addTextPaletteButton,focusFontControl,focusStyleControl" />


    <Button
        android:id="@+id/addTextPaletteButton"
        android:layout_width="46dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="Text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_editor_absoluteY="306dp" />


    <Button
        android:id="@+id/focusFontControl"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="Tool 1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/focusStyleControl"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="Tool 2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />



</androidx.constraintlayout.motion.widget.MotionLayout>