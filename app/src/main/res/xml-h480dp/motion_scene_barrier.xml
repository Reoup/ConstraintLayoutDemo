<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ConstraintSet android:id="@+id/initialState">

    </ConstraintSet>

    <ConstraintSet android:id="@+id/overviewState">
        <Constraint
            android:id="@+id/backButton"
            android:layout_width="wrap_content"
            android:layout_height="56dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
            <PropertySet android:alpha="1.0" />
        </Constraint>

        <Constraint
            android:id="@+id/addTextPaletteButton"
            android:layout_width="0dp"
            android:layout_height="56dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">
            <PropertySet android:alpha="1.0" />
        </Constraint>


        <Constraint
            android:id="@+id/projectViewContainer"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:alpha="1.0"
            app:layout_constraintBottom_toTopOf="@id/projectEndBarrier"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/projectBeginBarrier" />
    </ConstraintSet>


    <ConstraintSet android:id="@+id/focusState">
        <Constraint
            android:id="@+id/backButton"
            android:layout_width="wrap_content"
            android:layout_height="56dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
            <PropertySet android:alpha="1.0" />
        </Constraint>
        <Constraint
            android:id="@+id/projectViewContainer"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:alpha="1.0"
            app:layout_constraintBottom_toTopOf="@id/projectEndBarrier"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/projectBeginBarrier" />
    </ConstraintSet>

    <ConstraintSet
        android:id="@+id/focusState_Filter"
        app:deriveConstraintsFrom="@+id/focusState">
        <Constraint android:id="@+id/focusFilterControl">
            <Layout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />
        </Constraint>
    </ConstraintSet>

    <ConstraintSet
        android:id="@+id/focusState_Font"
        app:deriveConstraintsFrom="@+id/focusState">
        <Constraint android:id="@+id/focusFontControl">
            <Layout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />
        </Constraint>
    </ConstraintSet>



    <Transition
        app:constraintSetEnd="@id/overviewState"
        app:constraintSetStart="@+id/initialState"
        app:duration="500"/>
    <Transition
        app:constraintSetEnd="@+id/focusState"
        app:constraintSetStart="@+id/overviewState"
        app:duration="500" />
    <Transition
        app:constraintSetEnd="@+id/overviewState"
        app:constraintSetStart="@+id/focusState"
        app:duration="500" />
</MotionScene>
